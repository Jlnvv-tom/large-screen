{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "*/*.ts",
    "src/**/*.ts", 
    "src/**/*.d.ts", 
  ]
}